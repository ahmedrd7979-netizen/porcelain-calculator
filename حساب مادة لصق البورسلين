<div class="calculator">
  <table>
    <tr>
      <td>طول البلاطة (سم):</td>
      <td><input type="number" id="length" placeholder="مثلاً 160"></td>
    </tr>
    <tr>
      <td>عرض البلاطة (سم):</td>
      <td><input type="number" id="width" placeholder="مثلاً 320"></td>
    </tr>
    <tr>
      <td>المساحة الكلية (م²):</td>
      <td><input type="number" id="area" placeholder="مثلاً 130"></td>
    </tr>
    <tr>
      <td>وزن شيكارة مادة الصق (كجم):</td>
      <td><input type="number" id="bagWeight" placeholder="مثلاً 20"></td>
    </tr>
  </table>

  <button onclick="calculate()">احسب الآن</button>

  <div class="result" id="result">النتيجة ستظهر هنا...</div>
  <div class="summary" id="summary"></div>
</div>

<footer>© 2025 أبو غالي إنتريورز | تنفيذ هندسي احترافي بمعايير عالمية</footer>

<script>
function calculate() {
  const L = parseFloat(document.getElementById('length').value);
  const W = parseFloat(document.getElementById('width').value);
  const A = parseFloat(document.getElementById('area').value);
  const B = parseFloat(document.getElementById('bagWeight').value);

  if (isNaN(L)||isNaN(W)||isNaN(A)||isNaN(B)) {
    document.getElementById('result').innerHTML="⚠️ من فضلك أدخل جميع القيم بشكل صحيح.";
    document.getElementById('summary').innerHTML="";
    return;
  }

  // حساب الكمية التقريبية بمراعاة معامل الأمان
  const totalKg = (A * 15 * 1.33); // المعادلة تقريبية
  const totalBags = totalKg / B;

  document.getElementById('result').innerHTML =
    "🔸 الكمية المطلوبة: <b>" + totalKg.toFixed(1) + " كجم</b><br>" +
    "🧱 عدد الشكاير التقريبي: <b>" + totalBags.toFixed(1) + " شيكارة</b>";

  // ملخص المدخلات
  document.getElementById('summary').innerHTML =
    "📌 ملخص المدخلات:<br>" +
    "طول البلاطة: " + L + " سم<br>" +
    "عرض البلاطة: " + W + " سم<br>" +
    "المساحة الكلية: " + A + " م²<br>" +
    "وزن شيكارة مادة الصق: " + B + " كجم";
}
</script>
